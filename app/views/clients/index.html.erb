<div class="page-header">
  <h1>Clients</h1>
</div>

<table id="clients" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td>
          <%= link_to "Edit", edit_client_path(client), class: "btn btn-mini" %>
          <%= link_to "Delete", client_path(client), method: :delete, class: "btn btn-mini btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Client", new_client_path, class: "btn" %>
