<h1>Clients</h1>

<div class="btn-toolbar">
  <%= link_to "New Client", new_client_path, class: "btn" %>
</div>

<div class="well">
  <table id="clients" class="table">
    <thead>
      <tr>
        <th>Company</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.company_name %></td>
          <td><%= client.name %></td>
          <td><%= client.email %></td>
          <td>
            <%= link_to "Edit", edit_client_path(client), class: "btn btn-mini" %>
            <%= link_to "Delete", client_path(client), method: :delete, class: "btn btn-mini btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
