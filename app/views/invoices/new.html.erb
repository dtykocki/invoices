<%= simple_form_for @invoice, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Invoice</legend>

    <%= f.association :client, collection: @clients %>
    <%= f.input :due_date, as: :date %>
    <%= f.input :amount %>
    <%= f.input :status, collection: [ "Draft", "Sent", "Paid"] %>

    <div class="form-actions">
      <%= f.button :submit, 'Save', class: 'btn-primary' %>
      <%= link_to 'Cancel', invoices_path, class: 'btn btn-danger' %>
    </div>
  </fieldset>
<% end %>
